@model demo_banu.DAL.Category
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_DemoLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<h1>Kategori Güncelleme Sayfası</h1>
<div style="margin-left:30px; margin-right:30px">
    <form method="post">
        <label>Kategori ID: </label>
        @Html.TextBoxFor(x => x.CategoryId);
        <br />
        <label>Kategori Adı: </label>
        @Html.TextBoxFor(x => x.CategoryName);
        <br />
        <button class="btn btn-outline-warning">Güncelleme</button>
    </form>

</div>

